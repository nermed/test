{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
    <style>
        .body{
            height: 40rem;
        }
        .log{
            padding-top: 5rem;
        }
        .container{
            padding-top: 2rem;
        }
        .form-control{
            background-color: #CAC4B4;
        }
    </style>
{% endblock %}

{% block body %}
<div class="body" style="background-color: #403F3B;">
        <div class="log">
        <div class="container card mt-4" style="width:30rem; background-color:#646360;">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            
                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <h1 class="h3 mb-3 font-weight-normal text-center text-white">Please sign in</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-4" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control mb-4" required>
            
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
            
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
            
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
            
                <button class="btn btn-lg btn-primary text-right mb-4" type="submit">
                    Sign in
                </button>
            </form>
        </div>
    </div>
</div>

{% endblock %}
